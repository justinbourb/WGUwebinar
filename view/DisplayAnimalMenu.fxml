<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="340.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DisplayAnimalController">
   <children>
      <VBox fx:id="vbox" alignment="CENTER" layoutY="6.0" prefHeight="340.0" prefWidth="500.0">
         <children>
            <Label text="Display Animal Menu">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TableView fx:id="displayAnimalTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="125.0" text="ID" />
                <TableColumn fx:id="breedColumn" prefWidth="125.0" text="Breed" />
                  <TableColumn fx:id="lifespanColumn" prefWidth="125.0" text="Lifespan" />
                  <TableColumn fx:id="priceColumn" prefWidth="125.0" text="Price" />
              </columns>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TableView>
            <HBox fx:id="buttonHbox" alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="360.0" spacing="20.0">
               <children>
                  <Button fx:id="detailsButton" mnemonicParsing="false" onAction="#onActionDisplayAnimalDetailsMenu" text="Details" />
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#onActionDisplayMainMenu" text="Back" />
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
